@import '/sources/iconfont/iconfont.wxss';

/*  */
.super-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  /* 对元素指定宽度和高度包括了 padding 和 border 和 margin  */
  /* 默认 content-box: 内边距+边框高宽都不算在盒子的高宽中, 盒子的高宽=内容的高宽;
        border-box: 内边距+边框高宽都算在盒子的高宽中 */
  box-sizing: border-box;
  background-color: white;
}

/* banner */
.banner-image {
  display: flex; /*去除image标签默认边距*/
  width: 100%;
  height: 600rpx;
}

/* 分割线 */
.splitLine {
  height: 3rpx;
  background-color: #E0E3DA;
}