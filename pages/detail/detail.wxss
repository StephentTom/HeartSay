/* pages/detail/detail.wxss */


.banner-image {
    height: 350rpx;
}

.card-container {
    padding: 30rpx;
    background-color: violet;
}
.icon-weibiaoti- {
    color: black;
    font-size: 20rpx;
}
.card-hor-container {
    margin-top: 15rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: wrap;
    border-bottom: #E0E3DA double 3rpx;
}
.card-content {
    box-sizing: border-box;
    border: green solid 5rpx;
    border-radius: 5rpx;
    width: 200rpx;
    height: 110rpx;
    margin: 20rpx 0rpx;
    margin-bottom: 45rpx;
}
.card-content image {
    display: flex;
    width: 100%;
    height: 100%;
}